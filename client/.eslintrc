{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["airbnb", "airbnb/hooks", "plugin:@typescript-eslint/recommended"],
  "rules":  {
    "react/jsx-filename-extension": [
      2, 
      { "extensions": [".ts", ".tsx"] }
    ],
    "no-use-before-define": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "settings": { 
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".tsx"] 
      }
    }
  }
}